extends ProfileLayout

block content
    form(method='post', action='/topic/editTopic/#{topic._id}')
        .form-group
            .col-md-1
            .col-md-11
                .panel.panel-success.col-md-5
                    .panel-heading Temel Alan
                    .panel-body
                        select(name='myMainTopic', value='#{myMainTopic}')
                            each mainTopic in mainTopics
                                if mainTopic._id
                                    option(value='#{mainTopic._id}', selected=myMainTopic==mainTopic._id)  #{mainTopic.name}
                                else
                                    option(value='#{mainTopic._id}')  #{mainTopic.name}
                .panel.panel-success.col-md-5
                    .panel-heading Bilim Alanı
                    .panel-body
                        select(name='mySubTopic', value='#{mySubTopic}')
                            each subTopic in subTopics
                                option(value='#{subTopic._id}')  #{subTopic.name}
                .panel.panel-success.col-md-8
                    .panel-heading  Kavram Adı
                    .panel-body
                        input.form-control(type='text', name='topicName', placeholder='Temel Alan Adını Giriniz', autofocus='', value='#{topicName}')
                .panel.panel-success.col-md-8
                    .panel-heading Kavram Özeti
                    .panel-body
                        textarea(name='topicAbstract',  rows='4', cols='50',placeholder='Temel Alan Açıklamasını Giriniz', autofocus='') #{topic.abstract}
                .panel.panel-success.col-md-12
                    .panel-heading Kavram Tanımı
                    br
                    textarea#textarea(name='topicDefinition') #{topicDefinition}
                    script.
                        CKEDITOR.replace('textarea');
                .col-md-5
                    button.btn.btn-success.btn-block(type='submit', value='Submit', formaction='/topic/addTopic') Gönder
                .col-md-5
                    button.btn.btn-info(type='Submit', value='Submit') Güncelle

block solMenu
    ul.nav.nav-pills.nav-stacked
        li
            a(href='/user/following_list/#{user._id}')
                |  Takip Ettiklerim
        if user.role == 'admin'
            li
                a(href='/admin/addMainTopic')
                    | Temel Alan Ekle
            li
                a(href='/admin/addChiefEditor')
                    | Baş Editör Ekle
        if user.role == 'chiefEditor'
            li
                a(href='/chiefEditor/addSubTopic')
                    | Bilim Alanı Ekle
            li
                a(href='/chiefEditor/addEditor')
                    | Editör Ekle
        if user.role == 'editor'
            li
                a(href='/user/editor/getOnay')
                    |  Onay Havuzu
        li
            a(href='/topic/onApprove')
                |  Onay Bekleyen Kavramlarım
        li
            a(href='/topic/myTopics')
                | Onaylanan Kavramlarım
        li.active
            a(href='/topic/myDrafts')
                | Taslaklarım


script(src='../js/jquery.min.js')
script(src='../js/bootstrap.min.js')
script(src='../js/scripts.js')
