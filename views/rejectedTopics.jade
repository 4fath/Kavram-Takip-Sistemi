extends ProfileLayout

block solMenu
    #accordion.panel-group
        .panel.panel-default
            .panel-heading
                h4.panel-title
                    a(data-toggle='collapse', data-parent='#accordion', href='#collapseOne')
                        span.glyphicon.glyphicon-user
                        | Profil
            #collapseOne.panel-collapse.collapse
                .panel-body
                    table.table
                        if user.role == 'admin'
                            tr
                                td
                                    span.glyphicon.glyphicon-pencil.text-primary
                                    a(href='/user/adminProfile') Profil Ayarları
                        if user.role == 'chiefEditor'
                            tr
                                td
                                    span.glyphicon.glyphicon-pencil.text-primary
                                    a(href='/user/chiefEditorProfile') Profil Ayarları
                        if user.role == 'editor'
                            tr
                                td
                                    span.glyphicon.glyphicon-pencil.text-primary
                                    a(href='/user/editorProfile') Profil Ayarları
                        if user.role == 'author'
                            tr
                                td
                                    span.glyphicon.glyphicon-pencil.text-primary
                                    a(href='/user/authorProfile') Profil Ayarları
                        tr
                            td
                                span.glyphicon.glyphicon-envelope
                                a(href='http://www.jquery2dotnet.com') Gelen Kutusu
                        //tr
                        //    td
                        //        span.glyphicon.glyphicon-file.text-info
                        //        a(href='http://www.jquery2dotnet.com') Newsletters
                        //tr
                        //    td
                        //        span.glyphicon.glyphicon-comment.text-success
                        //        a(href='http://www.jquery2dotnet.com') Comments
                        //        span.badge 42
        each role in roles
            if user.role == 'admin'
                .panel.panel-default
                    .panel-heading
                        h4.panel-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseTwo')
                                span.glyphicon.glyphicon-th
                                | Yönetici İşlemleri
                    #collapseTwo.panel-collapse.collapse
                        .panel-body
                            table.table
                                tr
                                    td
                                        a(href='/admin/addMainTopic') Temel Alan Ekle
                                tr
                                    td
                                        a(href='/admin/addSubTopic') Bilim Alanı Ekle
                                tr
                                    td
                                        a(href='/admin/addChiefEditor') Baş Editör Ata
        each role in roles
            if role == 'chiefEditor'
                .panel.panel-default
                    .panel-heading
                        h4.panel-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseThree')
                                span.glyphicon.glyphicon-th
                                | Baş Editör İşlemleri
                    #collapseThree.panel-collapse.collapse
                        .panel-body
                            table.table
                                tr
                                    td
                                        a(href='/chiefEditor/addKeyword') Anahtar Kelime Ekle
                                tr
                                    td
                                        a(href='/chiefEditor/addEditor') Editör Ata
        each role in roles
            if role == 'editor'
                .panel.panel-default
                    .panel-heading
                        h4.panel-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseFour')
                                span.glyphicon.glyphicon-th
                                | Editör İşlemleri
                    #collapseFour.panel-collapse.collapse
                        .panel-body
                            table.table
                                tr
                                    td
                                        a(href='/user/editor/getOnay') Onay Havuzu
                                tr
                                    td
                                        a(href='/chiefEditor/addEditor') Onayladıklarım
        .panel.panel-default
            .panel-heading
                h4.panel-title
                    a(data-toggle='collapse', data-parent='#accordion', href='#collapseFive')
                        span.glyphicon.glyphicon-folder-close
                        | Kulanıcı İşlemleri
            #collapseFive.panel-collapse.collapse.in
                .panel-body
                    table.table
                        tr
                            td
                                a(href='/user/following_list/#{user._id}') Takip Ettiklerim
                        tr
                            td
                                a(href='/topic/myDrafts') Taslaklarım
                        tr
                            td
                                a(href='/topic/myTopics') Onaylanan Kavramlarım
                        tr
                            td
                                a(href='/topic/onApprove')
                                    | Onayda Bekleyen Kavramlarım
                        tr
                            td
                                a(href='/topic/myRejectedTopics')
                                    | Reddedilen Kavramlarım
        // /.sidebar
block content
    ul.list-group
        li.list-group-item.text-muted Reddedilen Kavramlar
        each item in rejectedTopics
            li.list-group-item.text-right
                a.pull-left(href='/topic/editTopic/#{item._id}') #{item.name}
                //button.btn-success(ng-click='addChiefEditor($index)') Aç
                a.btn.btn-success(href='/topic/editTopic/#{item._id}') Aç
                p
                    b.pull-left
                        | #{item.reason}


script(src='../js/jquery.min.js')
script(src='../js/bootstrap.min.js')
script(src='../js/scripts.js')
script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
script(type='text/javascript', src='../js/materialize.js')
