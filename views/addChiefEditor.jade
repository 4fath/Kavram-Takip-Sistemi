doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        script(src='../js/scripts.js')
        title Bilim Alanı İşlemleri
        script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
        script(src='../js/lumino.glyphs.js')
        meta(name='description', content='Source code generated using layoutit.com')
        meta(name='author', content='LayoutIt!')
        script(src='../js/adminOptionsjs.js')
        link(href='../css/dataTable.css', rel='stylesheet')
        script(src='../ckeditor/ckeditor.js')
        script(type='text/javascript', src='http://latex.codecogs.com/integration/ckeditor/ckeditor.js')
        link(href='../css/bootstrap.min.css', rel='stylesheet')
        link(href='../css/style.css', rel='stylesheet')
        script(src='../js/jquery-2.2.2.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular.js')
        link(rel='stylesheet', href='https://cdn.rawgit.com/esvit/ng-table/v1.0.0/dist/ng-table.min.css')
        script(src='https://cdn.rawgit.com/esvit/ng-table/v1.0.0/dist/ng-table.js')
    body
        != messages()
        .container-fluid
            .row
                .col-md-12
                    nav.navbar.navbar-inverse
                        .container-fluid
                            // Brand and toggle get grouped for better mobile display
                            .navbar-header
                                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                                a.navbar-brand(href='/') KavramTakip
                            // Collect the nav links, forms, and other content for toggling
                            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                                .col-md-3
                                form.navbar-form.navbar-left(role='search')
                                    .form-group
                                        input.form-control(type='text', placeholder='Kavram adı giriniz')
                                        button.btn.btn-default(type='submit') Ara
                                ul.nav.navbar-nav.navbar-right
                                    .navbar-form.form-group
                                        button.btn.btn-success(data-toggle='modal', data-target='#myModal')
                                            | Giriş
                                        button.btn.btn-warning(type='submit', onclick="location.href='kaydol.html';")
                                            | Kaydol
                            // /.navbar-collapse
                        // /.container-fluid
                    .row(ng-app='mainApp', ng-controller='userController')
                        #sidebar-collapse.col-md-2.sidebar

                        // /.sidebar
                        .col-md-9
                            form(method='post', action='/admin/addChiefEditor')
                                .form-group
                                    .col-md-1
                                    .col-md-11
                                        .panel.panel-success.col-md-5
                                            .panel-heading Main Topic
                                            .panel-body
                                                select(name='mainTopicID')
                                                    if myMainTopics
                                                        each mainTopic in myMainTopics
                                                            option(value='#{mainTopic._id}')  #{mainTopic.name}
                                        .panel.panel-success.col-md-5
                                            .panel-heading Kullanıcı
                                            .panel-body
                                                select(name='userID')
                                                    if myUsers
                                                        each user in myUsers
                                                            option(value='#{user._id}')  #{user.username}
                                        .col-md-5
                                            button.btn.btn-success.btn-block(type='submit', value='Submit') Kaydet

        script(src='js/jquery.min.js')
        script(src='js/bootstrap.min.js')
        script(src='js/scripts.js')
