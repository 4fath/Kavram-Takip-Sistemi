extends ProfileLayout

block content
    h2 Takip Edilen Kavramlar
    table.table.table-responsive
        tbody
            tr
            each takipTopic in takipEdilenlerTopicler
                td.col-md-4(style='display: block; float:left')
                    a(style='color:#5cb85c;', href='/subTopic/#{takipTopic._id}') #{takipTopic.name}

block solMenu
    ul.nav.nav-pills.nav-stacked
        li.active
            a(href='/user/settings')
                |  Takip Ettiklerim
        if user.role == 'admin'
            li
                a(href='/admin/addMainTopic')
                    | Temel Alan Ekle
            li
                a(href='/admin/addChiefEditor')
                    | Baş Editör Ekle
        if user.role == 'chiefEditor'
            li
                a(href='/chiefEditor/addSubTopic')
                    | Bilim Alanı Ekle
            li
                a(href='/chiefEditor/addEditor')
                    | Editor Ekle
        if user.role == 'editor'
            li
                a(href='/user/editor/getOnay')
                    |  Onay Bekleyenler Topicler
            li
                a(href='adminInbox.html')
                    | Onaylananlar
        if user.role == 'author'
            li
                a(href='/topic/onApprove')
                    |  Onay Bekleyenler
            li
                a(href='adminInbox.html')
                    | Onaylananlar
            li
                a(href='adminSubAdmin.html')
                    | Taslaklarım

script(src='../js/jquery.min.js')
script(src='../js/bootstrap.min.js')
script(src='../js/scripts.js')
