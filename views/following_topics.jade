extends ProfileLayout

block content
    h2 Takip Edilen Kavramlar
    table.table.table-responsive
        tbody
            tr
            each takipTopic in takipEdilenlerTopicler
                td.col-md-4(style='display: block; float:left')
                    a(style='color:#5cb85c;', href='/topic/getTopic/#{takipTopic._id}') #{takipTopic.name}

block solMenu
    ul.nav.nav-pills.nav-stacked
        li.active
            a(href='/user/following_list/#{user._id}')
                |  Takip Ettiklerim
        if user.role == 'admin'
            li
                a(href='/admin/addMainTopic')
                    | Temel Alan Ekle
            li
                a(href='/admin/addChiefEditor')
                    | Baş Editör Ekle
            li
                a(href='/admin/addSubTopic')
                    | Bilim Alanı Ekle
        if user.role == 'chiefEditor'
            li
                a(href='/chiefEditor/addKeyword')
                    |  Anahtar Kelime Ekle
            li
                a(href='/chiefEditor/addEditor')
                    | Editör Ekle
        if user.role == 'editor'
            li
                a(href='/user/editor/getOnay')
                    |  Onay Havuzu
        li
            a(href='/topic/onApprove')
                |  Onay Bekleyen Kavramlarım
        li
            a(href='/topic/myTopics')
                | Onaylanan Kavramlarım
        li
            a(href='/topic/myDrafts')
                | Taslaklarım

script(src='../js/jquery.min.js')
script(src='../js/bootstrap.min.js')
script(src='../js/scripts.js')
