extends ProfileLayout

block content
    ul.list-group
        li.list-group-item.text-muted Benim Yazdıklarım
        each item in myTopics
            li.list-group-item.text-right
                a.pull-left(href='/topic/getTopic/#{item._id}') #{item.name}
                button.btn-success(ng-click='addChiefEditor($index)') Düzenle

block solMenu
    ul.nav.nav-pills.nav-stacked
        li
            a(href='/user/following_list/#{user._id}')
                |  Takip Ettiklerim
        if user.role == 'admin'
            li
                a(href='/admin/addMainTopic')
                    | Temel Alan Ekle
            li
                a(href='/admin/addChiefEditor')
                    | Baş Editör Ekle
            li
                a(href='/admin/addSubTopic')
                    | Bilim Alanı Ekle
        if user.role == 'chiefEditor'
            li
                a(href='/chiefEditor/addKeyword')
                    |  Anahtar Kelime Ekle
            li
                a(href='/chiefEditor/addEditor')
                    | Editör Ekle
        if user.role == 'editor'
            li
                a(href='/user/editor/getOnay')
                    |  Onay Havuzu
        li
            a(href='/topic/myRejectedTopics')
                |  Reddedilen Kavramlarım
        li
            a(href='/topic/onApprove')
                |  Onay Bekleyen Kavramlarım
        li.active
            a(href='/topic/myTopics')
                | Onaylanan Kavramlarım
        li
            a(href='/topic/myDrafts')
                | Taslaklarım

