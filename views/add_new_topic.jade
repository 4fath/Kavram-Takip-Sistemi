                $scope.users = {
                    kavramList:[
                        {topics:'java', commentCount:'10'},
                        {topics:'veri madenciliği', commentCount:'100'},
                        {topics:'sql server', commentCount:'12'},
                        {topics:'visual studio', commentCount:'6'},
                        {topics:'c++', commentCount:'34'},
