doctype html
html(lang='en')
    // InstanceBegin template="/Templates/Sablon.dwt" codeOutsideHTMLIsLocked="false"
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        script('../js/scripts.js')
        script(src='../js/scripts.js')
        // InstanceBeginEditable name="doctitle"
        title Yeni Kavram Girişi
        script(src='../ckeditor/ckeditor.js')
        script(type='text/javascript', src='http://latex.codecogs.com/integration/ckeditor/ckeditor.js')
        // InstanceEndEditable
        script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
        meta(name='description', content='Source code generated using layoutit.com')
        meta(name='author', content='LayoutIt!')
        link(href='../css/bootstrap.min.css', rel='stylesheet')
        link(href='../css/style.css', rel='stylesheet')
        script(src='../js/jquery-2.2.2.js')
        link(href='../css/dataTable.css', rel='stylesheet')
        script(type='text/javascript', src='//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js')
        script(src='../js/dirPagination.js')

    body

        .container-fluid
            .row
                .col-md-12
                    nav.navbar.navbar-inverse
                        .container-fluid
                            // Brand and toggle get grouped for better mobile display
                            .navbar-header
                                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                                a.navbar-brand(href='kavramTakip.html') KavramTakip
                            // Collect the nav links, forms, and other content for toggling
                            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                                .col-md-3
                                form.navbar-form.navbar-left(role='search')
                                    .form-group
                                        input.form-control(type='text', placeholder='Kavram adı giriniz')
                                        button.btn.btn-default(type='submit') Ara
                                ul.nav.navbar-nav.navbar-right
                                    .navbar-form.form-group
                                        button.btn.btn-success(data-toggle='modal', data-target='#myModal')
                                            | Giriş
                                        button.btn.btn-warning(type='submit', onclick="location.href='kaydol.html';")
                                            | Kaydol
                            // /.navbar-collapse
                        // /.container-fluid
                    .row(ng-app='mainApp', ng-controller='userController')
                        .col-md-2
                            .list-group
                                span.list-group-item.active(href='#')
                                    | Kavramlar
                                    span#slide-submenu.pull-right
                                        i.fa.fa-times
                                a.list-group-item(href='#', dir-paginate='veri in users.kavramList | itemsPerPage: kavramPageSize', pagination-id='kavramlar')
                                    i.fa
                                    |  {{ veri.topics }}
                                    span.badge {{ veri.commentCount }}
                                dir-pagination-controls.pagination-sm(ng-model='bigCurrentPage', direction-links='false', boundary-link-numbers='false', rotate='true', pagination-id='kavramlar', force-ellipses='false', max-size='6')
                        .col-md-8
                            // InstanceBeginEditable name="icerik"
                            .row
                                .col-md-1
                                .col-md-10
                                form(method='POST', action='/topic/add')
                                    .form-group

                                        .panel.panel-success.col-md-5
                                            .panel-heading Main Topic
                                            .panel-body
                                                select(name='myMainTopic')
                                                    each mainTopic in mainTopics
                                                        option(value='#{mainTopic._id}')  #{mainTopic.name}

                                        .panel.panel-success.col-md-5
                                            .panel-heading Sub Topic
                                            .panel-body
                                                select(name='mySubTopic')
                                                    each subTopic in subTopics
                                                        option(value='#{subTopic._id}')  #{subTopic.name}
                                        .panel.panel-success.col-md-8
                                            .panel-heading  Topic Name
                                            .panel-body
                                                input.form-control(type='text', name='topicName', placeholder='Temel Alan Adını Giriniz', autofocus='')
                                        .panel.panel-success.col-md-8
                                            .panel-heading Topic Definition
                                            .panel-body
                                                input.form-control(type='text', name='topicDefinition', placeholder='Temel Alan Açıklamasını Giriniz', autofocus='')
                                        .panel.panel-success.col-md-12
                                            .panel-heading Kavram Tanımı
                                            br
                                            textarea#textarea(name='kavram_tanimi')
                                            script.
                                                CKEDITOR.replace( 'textarea' );
                                        .col-md-9
                                        .col-md-3
                                            button.btn.btn-success.btn-block(type='submit') Yorum Gönder
                                .col-md-1
                            // InstanceEndEditable
                        .col-md-2
                            .list-group
                                span.list-group-item.active(href='#')
                                    | Takip Listesi
                                    span#slide-submenu.pull-right
                                        i.fa.fa-times
                                a.list-group-item(href='#', dir-paginate='veri in users.kavramList | itemsPerPage: kavramPageSize', pagination-id='takipList')
                                    i.fa
                                    |  {{ veri.topics }}
                                    span.badge {{ veri.commentCount }}
                                dir-pagination-controls(pagination-id='takipList', max-size='15', direction-links='true', boundary-links='true')
                            .list-group
                                span.list-group-item.active(href='#')
                                    | Tavsiyeler
                                    span#slide-submenu.pull-right
                                        i.fa.fa-times
                                a.list-group-item(href='#', dir-paginate='veri in users.kavramList | itemsPerPage: kavramPageSize', pagination-id='adviseList')
                                    i.fa
                                    |  {{ veri.topics }}
                                    span.badge {{ veri.commentCount }}
                                dir-pagination-controls(pagination-id='adviseList', max-size='15', direction-links='true', boundary-links='true')

        script(src='../js/jquery.min.js')
        script(src='../js/bootstrap.min.js')
        script(src='../js/scripts.js')
    // InstanceEnd
