extends ProfileLayout

block solMenu
    ul.nav.nav-pills.nav-stacked
        li
            a(href='/user/following_list/#{user._id}')
                |  Takip Ettiklerim
        li.active
            a(href='/user/editor/getOnay')
                |  Onay Havuzu
        li
            a(href='/topic/onApprove')
                |  Onay Bekleyen Kavramlarım
        li
            a(href='adminInbox.html')
                | Onaylanan Kavramlarım
        li
            a(href='/topic/myDrafts')
                | Taslaklarım
        // /.sidebar
block content
    ul.list-group
        li.list-group-item.text-muted Onay Bekleyenler Kavramlar
        each item in onayBekleyenler
            li.list-group-item.text-right
                a.pull-left(href='/topic/getTopic/#{item._id}') #{item.name}
                //button.btn-success(ng-click='addChiefEditor($index)') Aç
                a.btn.btn-success(href='/topic/getTopic/#{item._id}') Aç



