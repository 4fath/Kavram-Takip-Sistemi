                                        //            .row
                                        //                .col-md-6
                                        //                    button.btn.btn-default.btn-block(type='submit')
                                        //                        | Taslak Olarak Kaydet    
                                        //                        span.glyphicon.glyphicon-pencil(class='aria-hidden=')
                                        //                .col-md-6
                                        //                    button.btn.btn-success.btn-block(formaction='/comment/addComment', type='submit')
                                        //                        | Gönder
                                .col-md-1
                        .col-md-2
                            if user
                                .list-group
                                    span.list-group-item.active(href='#')
                                        | Takip Edilen Kavramlar
                                        span#slide-submenu.pull-right
                                            i.fa.fa-times
                                    a.list-group-item(href='#')
                                        i.fa
                                        |  java
                                        span.badge 124


                                .list-group
                                    span.list-group-item.active(href='#')
                                        | Tavsiye Edilen Kavramlar
                                        span#slide-submenu.pull-right
                                            i.fa.fa-times
                                    a.list-group-item(href='#')
                                        i.fa
                                        |  java
                                        span.badge 124
            .fixed-action-btn.horizontal(style='bottom: 45px; right: 24px;')
                a.btn-floating.btn-large.red
                    i.large.material-icons mode_edit
                ul
                    li
                        a.btn-floating.red
                            i.material-icons insert_chart
                    li
                        a.btn-floating.yellow.darken-1
                            i.material-icons format_quote
                    li
                        a.btn-floating.green
                            i.material-icons publish
                    li
                        a.btn-floating.blue
                            i.material-icons attach_file

