extends MainLayout

block content

    .row
        .col-md-1
        .col-md-10
            ul.list-group
                li.list-group-item.modal-header
                    h3
                        .breadcrumb
                            if screenMainTopic
                                a(href='/mainTopic/#{screenMainTopic._id}') #{screenMainTopic.name}
                            if screenSubTopic
                                a(href='/subTopic/#{screenSubTopic._id}') #{screenSubTopic.name}
                            if screenKeyword
                                a(href='/keyword/#{screenKeyword._id}') #{screenKeyword.name}
                        .row
                            h1
                                a.col-md-8(href='/topic/getTopic/#{screenTopic._id}') #{screenTopic.name}
                                if user
                                    if screenTopic
                                        if screenTopic.allowStatus.status
                                            if !followerControl
                                                .col-md-4
                                                    form(method='POST', action='/user/follow/#{screenTopic._id}')
                                                        .form-group
                                                            button.btn.btn-success(type='Submit', value='Submit')
                                                                span.glyphicon.glyphicon-arrow-right(aria-hidden='true')
                                                                | Takip Et
                        if user
                            h4
                                i(style='color:#747474;')
                                    | #{screenTopic.abstract}
                        if user
                            if screenTopic
                                | !{screenTopic.definition}
                                if topicUser
                                    .row
                                        .col-md-2
                                            a(href='/public_profile/getProfile/#{screenTopic.author}') #{topicUser.username}
                                        .col-md-7
                                        .col-md-3
                                            span #{moment(screenTopic.createdAt).format('DD/MM/YYYY')}
                        else
                            if screenTopic
                                h4
                                    i(style='color:#747474;')
                                        | !{screenTopic.abstract}
                                if topicUser
                                    .row
                                        .col-md-2
                                            a(href='/#{screenTopic.author}') #{topicUser.username}
                                        .col-md-7
                                        .col-md-3
                                            span #{moment(screenTopic.createdAt).format('DD/MM/YYYY')}

script(src='../js/jquery.min.js')
script(src='../js/bootstrap.min.js')
script(src='../js/scripts.js')
script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
script(type='text/javascript', src='../js/materialize.js')
