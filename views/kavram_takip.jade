    body
        .container-fluid
            .row
                .col-md-12
                    nav.navbar.navbar-inverse
                        .container-fluid
                            // Brand and toggle get grouped for better mobile display
                            .navbar-header
                                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                                a.navbar-brand(href='/') KavramTakip
                            // Collect the nav links, forms, and other content for toggling
                            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                                .col-md-3
                                form.navbar-form.navbar-left(role='search')
                                    .form-group
                                        input.form-control(type='text', placeholder='Kavram adı giriniz')
                                        button.btn.btn-default(type='submit') Ara

                                if !user
                                    ul.nav.navbar-nav.navbar-right
                                        .navbar-form.form-group
                                            button.btn.btn-success(type= 'submit', name = 'Submit', onclick="location.href='/users/login';")
                                                | Giriş
                                            button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/register';")
                                                | Kaydol !

                                if user
                                    if user.roles == 'admin'
                                        ul.nav.navbar-nav.navbar-right
                                            .navbar-form.form-group
                                                button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/addChief';")
                                                    | Chief Editor Ekle #{user.firstName} !
                                            .navbar-form.form-group
                                                button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/addMainTopic';")
                                                    | Main Topic Ekle #{user.firstName} !
                                    else
                                        if user.roles == 'chiefEditor'
                                            ul.nav.navbar-nav.navbar-right
                                                .navbar-form.form-group
                                                    button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/logout';")
                                                        |  Editor Ekle #{user.firstName}!
                                                .navbar-form.form-group
                                                    button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/logout';")
                                                        |  SubTopic Ekle #{user.firstName}!
                                        else
                                            if user.roles == 'editor'
                                                ul.nav.navbar-nav.navbar-right
                                                    .navbar-form.form-group
                                                        button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/logout';")
                                                            |  Editor girmis #{user.firstName}!
                                            else
                                                if user.roles == 'author'
                                                    ul.nav.navbar-nav.navbar-right
                                                        .navbar-form.form-group
                                                            button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/logout';")
                                                                |  Hoşgeldin #{user.firstName}!

                                    ul.nav.navbar-nav.navbar-right
                                        .navbar-form.form-group
                                            button.btn.btn-warning(type='submit', name = 'Submit' onclick="location.href='/users/logout';")
                                                | Çıkış !

                            // /.navbar-collapse
                        // /.container-fluid
                    .row
                        .col-md-2

                            .list-group
                                span.list-group-item.active(href='#')
                                    | Kavramlar
                                    span#slide-submenu.pull-right
                                        i.fa.fa-times
                                each topic in topics
                                    a.list-group-item(href='/topic/#{topic._id}')
                                        i.fa
                                        |  #{topic.name}
                                        span.badge 124

                        .col-md-8
                            .row
                                .col-md-1
                                .col-md-10
                                    ul.list-group
                                        li.list-group-item.modal-header
                                            h3
                                                a#baslik(href='#') #{mainTopic.name}

                                        each val in comments
                                            li.list-group-item
                                                | !{val.content}
                                                .row
                                                    .col-md-2
                                                        a(href='#') kullanıcı
                                                    .col-md-8
                                                    .col-md-2
                                                        span #{val.created_at}


                                        if user
                                            li.list-group-item
                                                form(method='post', action='/users/addComment', role='form')
                                                    textarea#textarea(name='commentBody')
                                                    script.
                                                        CKEDITOR.replace('textarea');
                                                    br
                                                    .row
                                                        .col-md-4
                                                        .col-md-4
                                                            button.btn.btn-default.btn-block(type='submit')
                                                                | Taslak Olarak Kaydet    
                                                                span.glyphicon.glyphicon-pencil(class='aria-hidden=')
                                                        .col-md-4
                                                            button.btn.btn-success.btn-block(formaction='/comment/addComment', type='submit') Gönder
                                .col-md-1
                        .col-md-2
                            if user
                                .list-group
                                    span.list-group-item.active(href='#')
